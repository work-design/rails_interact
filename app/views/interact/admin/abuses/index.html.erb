<div class="ui top attached borderless menu">
  <div class="header item">Admin Abuses</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Abus', new_admin_abus_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Abuse.human_attribute_name(:id) %></th>
      <th>
        <p><%= Abuse.human_attribute_name(:abusement_type) %></p>
        <p><%= Abuse.human_attribute_name(:abusement_id) %></p>
      </th>
      <th><%= Abuse.human_attribute_name(:state) %></th>
      <th><%= Abuse.human_attribute_name(:note) %></th>
      <th><%= Abuse.human_attribute_name(:user) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @abuses.each do |abuse| %>
    <tr>
      <td><%= abuse.id %></td>
      <td>
        <p><%= abuse.abusement_type %></p>
        <p><%= abuse.abusement_id %></p>
      </td>
      <td><%= abuse.state %></td>
      <td><%= abuse.note %></td>
      <td><%= abuse.user %></td>
      <td class="ui labels">
        <%= link_to admin_abuses_path(abuse), aria: { label: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_abuses_path(abuse), aria: { label: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_abuse_path(abuse), method: :delete, aria: { label: t('.destroy') }, data: { confrim: t('.confirm') }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @abuses %>
